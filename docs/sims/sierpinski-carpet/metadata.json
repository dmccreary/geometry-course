  "framework": "p5.js",
  "canvasDimensions": "responsive x 550",
  "responsive": true,
  "dependencies": [
    "p5.js CDN"
  ],
  "accessibility": {
    "screenReaderSupport": true,
    "keyboardNavigation": false
  },
  "controls": [
    {
      "type": "slider",
      "name": "recursionSlider",
      "label": "Recursion Level",
      "min": 1,
      "max": 6,
      "default": 1,
      "step": 1,
      "description": "Controls the depth of fractal recursion. Higher values create more detailed patterns with more holes."
    },
    {
      "type": "slider",
      "name": "sizeSlider",
      "label": "Size",
      "min": 50,
      "max": 100,
      "default": 80,
      "step": 1,
      "unit": "%",
      "description": "Adjusts the overall size of the carpet within the canvas."
    }
  ],
  "modelType": "geometric-fractal",
  "variables": [
    "recursionLevel",
    "carpetSize"
  ],
  "equations": [
    "Number of squares at level n: 8^n",
    "Remaining area at level n: (8/9)^n",
    "Fractal dimension: log(8)/log(3) \u2248 1.8928"
  ],
  "assumptions": [
    "Perfect geometric construction",
    "Exact 3x3 subdivision at each level",
    "Discrete recursion levels (not continuous)"
  ],
  "limitations": [
    "Maximum recursion level of 6 to prevent performance issues",
    "Cannot visualize infinite recursion",
    "Grid subdivision is fixed at 3x3"
  ],
